<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if(username){ %>
      <h3 class="nav-item my-2 my-sm-0 px-2">Hi <%= username %>!</h3>
      <button action="/logout" method="POST" class="btn btn-outline-dark my-2 my-sm-0" type="submit">Logout</button>
   <% } else{ %>
    <form class="form-inline" action="/login" method="POST">
      <input class="form-control mr-sm-2" name="username" type="text" placeholder="Username" aria-label="Username">
      <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Login</button>
    </form>
    <% } %>
  </nav>
</header>